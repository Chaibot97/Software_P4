program bubble(n a[])
pre n > 0
is
  bound := n;
  while bound > 0
  do
    i := 0;
    while i < bound - 1
    do
      if a[i] > a[i+1] then
        t := a[i];
        a[i] := a[i+1];
        a[i+1] := t;
      end
      i := i + 1;
    end
    bound := bound - 1;
  end
  assert forall j k, 0 <= j && j < k && bound <= k && k < n ==> a[j] <= a[k];
end